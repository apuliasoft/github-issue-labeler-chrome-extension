{
    "manifest_version": 2,
    "name": "OpenReq", 
    "description": "The extension that help you to classify the issues",
    "content_scripts": [{
        "js": ["classify.js"],
        "matches": ["*://github.com/*"]
     }
     // {
     //    "js": ["train.js"],
     //    "matches": ["https://github.com/*/*/issues"]
     // }
    ],
    "version": "1.0",
    "author": "ApuliaSoft srl",
    "icons": { "16": "icon16.png",
               "48": "icon48.png",
              "128": "icon128.png" },
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "OpenReq extension"
    },
    "permissions": [
        "webNavigation",
        "tabs",
        "activeTab",
        "http://134.209.248.162:5000/*",
        "https://github.com/*",
        "http://acca-ufficius.herokuapp.com/*"
     ],
    "background": {
        "scripts": ["background.js"]
    }
}   