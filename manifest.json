{
    "manifest_version": 2,
 
    "name": "Open req", 
    "description": "The extension that help you tu classify the issues",
    "content_scripts": [{
        "js": ["classify.js"],
        "matches": ["https://github.com/*/*/issues"]
     },
     {
        "js": ["train.js"],
        "matches": ["https://github.com/*/*"]
     }
    ],
    "version": "1.0",
    "author": "ApuliaSoft srl",
    "browser_action": {
        "default_icon": "icon.png",
        "default_title": "OpenReq extension"
    },
    "permissions": [
        "webNavigation",
        "tabs",
        "activeTab",
        "http://localhost:1337/*",
        "http://localhost:5000/*" ,
        "http://134.209.248.162:5000/*",
        "https://www.google.com/*",
        "https://github.com/*"
     ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    }
}   